// Interaction

ActiveFocusHover()
	&.active
	&:active,
	&:focus,
	&:hover
		{block}

// Layout

add-margin(direction)
	margin-{direction}			$base-spacing-unit !important
	
add-padding(direction)
	padding-{direction}			$base-spacing-unit !important

clear()
	clear 						both

clearfix()
	*zoom:1

	&:before,
	&:after
		content					""
		display					table

	&:after
		clear					both

fl()
	float						left
	
fr()
	float						right

.group
	clearfix()

relative()
	position					relative

// Typography

inline-list()
	li
		display					inline-block
		margin-left				-4px
		
		&:first-of-type
			margin-left			0

unstyled-list()
	list-style					none
	margin						0
	padding						0